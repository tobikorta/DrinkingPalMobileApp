<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@tools:sample/avatars" />

    <TextView
            android:id="@+id/lblTitleBar"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_marginTop="48dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    <TextView
            android:id="@+id/lblDescription"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_marginTop="48dp"
            app:layout_constraintTop_toBottomOf="@+id/lblTitleBar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    <TextView
            android:id="@+id/lblLat"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_marginTop="48dp"
            app:layout_constraintTop_toBottomOf="@+id/lblDescription"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    <TextView
            android:id="@+id/lblLong"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_marginTop="48dp"
            app:layout_constraintTop_toBottomOf="@+id/lblLat"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    <Button
            android:id="@+id/btnCreateEvent"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_marginTop="48dp"
            android:layout_marginStart="48dp"
            android:text="Create Event"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lblLong" />

    <Button
            android:id="@+id/btnGoToMaps"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_marginTop="48dp"
            android:layout_marginEnd="48dp"
            android:text="Go To Maps"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lblLong" />
</androidx.constraintlayout.widget.ConstraintLayout>