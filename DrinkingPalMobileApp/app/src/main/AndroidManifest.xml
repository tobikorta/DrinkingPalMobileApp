<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ts.tk.drinkingpalmobileapp">
    <uses-permission android:name="android.permission.INTERNET"/>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.DrinkingPalMobileApp">

        <activity
            android:name=".ChooseLanguagePage"
            android:parentActivityName=".SignUpPage" />
        <activity
            android:name=".SignUpPage"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".HomeScreen" />
        <activity
            android:name=".ProfileDashboard"
            android:parentActivityName=".HomeScreen"/>
        <activity
            android:name=".Events"
            android:parentActivityName=".ProfileDashboard"/>
        <activity
            android:name=".Messages"
            android:parentActivityName=".ProfileDashboard"/>
        <activity
            android:name=".FavouriteBars"
            android:parentActivityName=".ProfileDashboard"/>
        <activity
            android:name=".StatsHistory"
            android:parentActivityName=".ProfileDashboard"/>
        <activity
            android:name=".ProfileEdit"
            android:parentActivityName=".ProfileDashboard"/>
        <activity
            android:name=".MainActivity"
            android:exported="true">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>