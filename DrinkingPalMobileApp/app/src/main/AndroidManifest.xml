<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ts.tk.drinkingpalmobileapp">
    <uses-permission android:name="android.permission.INTERNET"/>


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:usesCleartextTraffic="true"
        android:windowSoftInputMode="stateHidden"
        android:theme="@style/Theme.DrinkingPalMobileApp">

        <activity
            android:name=".activities.ChooseLanguagePage"
            android:parentActivityName=".activities.SignUpPage" />
        <activity
            android:name=".activities.SignUpPage"
            android:parentActivityName=".activities.MainActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".activities.BarsDetails"
            android:parentActivityName=".activities.HomeScreen"
            android:screenOrientation="portrait"/>
        <activity
                android:name=".activities.NewEvent"
                android:parentActivityName=".activities.HomeScreen"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".activities.HomeScreen"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".activities.ProfileDashboard"
            android:parentActivityName=".activities.HomeScreen"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".activities.Events"
            android:parentActivityName=".activities.ProfileDashboard"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".activities.Messages"
            android:parentActivityName=".activities.ProfileDashboard"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".activities.FavouriteBars"
            android:parentActivityName=".activities.ProfileDashboard"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".activities.StatsHistory"
            android:parentActivityName=".activities.ProfileDashboard"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".activities.ProfileEdit"
            android:parentActivityName=".activities.ProfileDashboard"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".activities.MainActivity"
            android:exported="true"
            android:screenOrientation="portrait">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>